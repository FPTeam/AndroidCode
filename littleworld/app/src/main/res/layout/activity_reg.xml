<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".RegActivity">

    <ImageView
        android:id="@+id/arrowRegReturn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:tint="#33CCCC"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新用户"
        android:padding="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="35sp" />


    <ImageView
        android:id="@+id/sculpture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars"
        />

    <ImageView
        android:id="@+id/uploadSculp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-25dp"
        android:background="#00FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/reg_input"
            android:hint="请输入用户名"
            android:padding="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/regPwd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_input"
            android:hint="请输入密码"
            android:padding="15dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/regPwdAgain"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_input"
            android:hint="请确认密码"
            android:padding="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/infoConfirm"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/confirm_button"
            android:text="@string/infoConfirm"
            android:textColor="#FFFFFFFF"
            android:padding="15dp"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>