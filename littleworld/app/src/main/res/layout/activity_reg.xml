<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    tools:context=".RegActivity">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:tint="#33CCCC"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/new_user"
        android:textAlignment="center"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/sculpture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@android:string/untitled"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/uploadSculp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-25dp"
        android:background="#00FFFFFF"
        android:contentDescription="@android:string/untitled"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regName"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/reg_input"
            android:hint="@string/username_login"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/regPwd"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_input"
            android:hint="@string/password_login"
            android:inputType="textPassword"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/regPwdAgain"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/reg_input"
            android:hint="@string/password_confirm"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/infoConfirm"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/confirm_button"
            android:padding="15dp"
            android:text="@string/infoConfirm"
            android:textAlignment="center"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>