<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReleaseDynamicsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#33CCCC"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/accounts"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#33CCCC"
                android:padding="10dp"
                android:text="@string/new_notes"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>


        <ImageButton
            android:id="@+id/new_note_ret"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#33CCCC"
            android:contentDescription="@android:string/cancel"
            android:tint="#FFFFFF"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <Button
            android:id="@+id/note_send"
            android:layout_width="72dp"
            android:layout_height="38dp"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/send_botton"
            android:text="@string/send_button"
            android:textColor="#515151"
            android:textSize="16sp" />

    </FrameLayout>

    <EditText
        android:id="@+id/input_notes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFFFF"
        android:gravity="top|left"
        android:hint="@string/note_hint"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#515151"
        android:textColorHint="#E5E6E8"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:layout_marginStart="10dp" />
        <ImageView
            android:id="@+id/add_pictures"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:background="#00FFFFFF"
            app:srcCompat="@mipmap/add_picture" />
    </LinearLayout>

    <!--4行5列-->
    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/others_to_see"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/others_to_see"
            android:textColor="#515151"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="0" />

        <Switch
            android:id="@+id/let_others_see_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            app:layout_column="10"
            app:layout_row="0"
            app:layout_rowSpan="2" />

        <TextView
            android:id="@+id/add_tag"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_tag"
            android:textColor="#515151"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/to_add_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:layout_gravity="right"
            app:srcCompat="@mipmap/arrow"
            app:layout_column="10"
            app:layout_row="1" />

        <TextView
            android:id="@+id/add_place"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/add_place"
            android:textColor="#515151"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/to_add_place"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:layout_gravity="right"
            app:srcCompat="@mipmap/arrow"
            app:layout_column="10"
            app:layout_row="2" />

        <TextView
            android:id="@+id/travel_end"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/travel_end"
            android:textColor="#515151"
            android:textSize="20sp"
            app:layout_column="0"
            app:layout_row="3" />

        <Switch
            android:id="@+id/end_journey_sw"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="true"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            app:layout_column="10"
            app:layout_columnSpan="2"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>


